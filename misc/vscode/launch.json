{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Open Project",
            "program": "${workspaceFolder}/godot/source/bin/godot.windows.editor.x86_64.exe",
            "symbolSearchPath": "${workspaceFolder}/bin",
            "console": "integratedTerminal",
            "args": [
                "-e project.godot"
            ],
            "cwd": "${workspaceFolder}",
            "type": "cppvsdbg",
            "request": "launch",
            "preLaunchTask": "Build Custom Editor"
        },
        {
            "name": "Open Project (DEBUG)",
            "program": "${workspaceFolder}/godot/source/bin/godot.windows.editor.dev.x86_64.exe",
            "symbolSearchPath": "${workspaceFolder}/bin",
            "console": "integratedTerminal",
            "args": [
                "-e project.godot"
            ],
            "cwd": "${workspaceFolder}",
            "type": "cppvsdbg",
            "request": "launch",
            "preLaunchTask": "Build Custom Editor (DEBUG)"
        },
        {
            "name": "Open Project (no compile)",
            "program": "${workspaceFolder}/godot/source/bin/godot.windows.editor.x86_64.exe",
            "symbolSearchPath": "${workspaceFolder}/bin",
            "console": "integratedTerminal",
            "args": [
                "-e project.godot"
            ],
            "cwd": "${workspaceFolder}",
            "type": "cppvsdbg",
            "request": "launch"
        }
    ]
}