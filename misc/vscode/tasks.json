{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Custom Editor",
            "type": "shell",
            "command": "scons",
            "args": [
                "-j24",
                "custom_modules=%EC_MODULES%"
            ],
            "group": "build",
            "presentation": {
                // Reveal the output only if unrecognized errors occur.
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile",
            "options": {
                "cwd": "${workspaceFolder}/godot/godot_source",
                "env": {
                    "EC_MODULES": "${workspaceFolder}/godot/modules"
                }
            }
        },
        {
            "label": "Build Custom Editor (DEBUG)",
            "type": "shell",
            "command": "scons",
            "args": [
                "-j24",
                "custom_modules=%EC_MODULES%",
                // enable for debugging with breakpoints
                "dev_build=yes"
            ],
            "group": "build",
            "presentation": {
                // Reveal the output only if unrecognized errors occur.
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile",
            "options": {
                "cwd": "${workspaceFolder}/godot/godot_source",
                "env": {
                    "EC_MODULES": "${workspaceFolder}/godot/modules"
                }
            }
        }
    ]
}